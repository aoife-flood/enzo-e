include "input/test_particle.incl"

Domain { 
    lower = [-1.0, -1.0];
    upper = [ 1.0,  1.0];
}

Adapt {
   list = ["MASK"];

   max_level = 3;

   MASK {
      type = "mask";
      value = [ 6.0, (x - 0.5)*(x - 0.5) + y*y <= 0.25, 0.0 ];
   }
   
}

Mesh {
   root_size = [32,32];
}

Stopping { cycle = 256; }

 Initial {
     value {
         velocity_x = 1.0;
         velocity_y = 0.0;
     };
     trace { stride = [8,8];}
  }

Method { trace {  timestep = .015625; } }

Output {
    list = ["mesh","trace"];       
    trace {
        name = [ "particle-amr-static-%03d.png", "cycle" ];
        schedule {  var =  "cycle";  step = 32; }
#        image_reduce_type = "max";
        image_size = [ 512, 512 ];
    }
    mesh {
        type = "image";
        image_size = [ 513, 513 ];
        image_reduce_type = "max";
	image_type = "data+mesh";
	field_list = ["velocity_x"];
        schedule {  var =  "cycle";  step = 32; }
	name = [ "particle-amr-static-mesh-%03d.png", "cycle" ];
	include "input/colormap_rainbow.incl"
    }
}

